@using Test3.Data.Models
@using Test3.Data.Services
@using Microsoft.AspNetCore.Components.Forms
@inject RoomService RoomService
@inject ImageService ImageService

<div class="modal-overlay @(IsVisible ? "visible" : "")">
    <div class="modal-content unit-modal">
        <div class="modal-header">
            <h3>@(IsEditing ? "Edit Unit" : "Add Unit")</h3>
            <button class="close-btn" @onclick="CloseModal">×</button>
        </div>

        <div class="modal-body">
            @if (isLoading)
            {
                <div class="loading">Loading unit data...</div>
            }
            else
            {
                <div class="form-grid">
                    <div class="form-group">
                        <label>Unit Number:</label>
                        <input @bind="CurrentRoom.UnitNumber" class="text-input" placeholder="e.g., Unit 101" />
                    </div>

                    <div class="form-group">
                        <label>Monthly Rent (₱):</label>
                        <input type="number" @bind="CurrentRoom.RoomPrice" class="text-input" placeholder="0.00" step="0.01" />
                    </div>

                    <div class="form-group">
                        <label>Bed Count:</label>
                        <select @bind="CurrentRoom.BedCount" class="select-input">
                            <option value="1">1 Bed</option>
                            <option value="2">2 Beds</option>
                            <option value="3">3 Beds</option>
                            <option value="4">4 Beds</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Room Type:</label>
                        <select @bind="CurrentRoom.RoomType" class="select-input">
                            <option value="Single">Single</option>
                            <option value="Double">Double</option>
                            <option value="Studio">Studio</option>
                            <option value="Suite">Suite</option>
                            <option value="Executive">Executive</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Status:</label>
                        <select @bind="CurrentRoom.Status" class="select-input">
                            <option value="Available">Available</option>
                            <option value="Occupied">Occupied</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" @bind="CurrentRoom.Aircon" />
                            <span class="checkmark"></span>
                            Air Conditioning
                        </label>
                    </div>

                    <div class="form-group full-width">
                        <label>Description:</label>
                        <textarea @bind="CurrentRoom.Description" class="text-input textarea"
                                  placeholder="Enter room description..." rows="3"></textarea>
                    </div>

                    <!-- Multiple Image Upload -->
                    <div class="form-group full-width">
                        <label>Unit Images:</label>
                        <div class="multiple-image-upload">
                            <!-- Existing Images -->
                            @if (CurrentRoom.Images.Any())
                            {
                                <div class="existing-images-grid">
                                    <h4>Existing Images</h4>
                                    <div class="images-grid">
                                        @for (int i = 0; i < CurrentRoom.Images.Count; i++)
                                        {
                                            var index = i; // Capture the index in a local variable
                                            var image = CurrentRoom.Images[i];
                                            <div class="image-item">
                                                <img src="data:@image.ImageContentType;base64,@Convert.ToBase64String(image.ImageData)"
                                                     alt="Unit image"
                                                     class="preview-image-multiple" />
                                                <button type="button" class="remove-existing-image-btn"
                                                        @onclick="() => RemoveExistingImage(index)">
                                                    ×
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            <!-- New Image Upload -->
                            <div class="new-images-section">
                                <h4>Add New Images</h4>
                                <div class="file-upload-area-multiple">
                                    <InputFile accept=".png,.jpg,.jpeg"
                                               OnChange="HandleMultipleFilesSelected"
                                               class="file-input-multiple"
                                               id="multipleFileInput"
                                               multiple />
                                    <label for="multipleFileInput" class="file-input-label-multiple">
                                        <span>+ Choose Images (Multiple PNG, JPG, JPEG)</span>
                                    </label>
                                </div>

                                <!-- New Images Preview -->
                                @if (selectedFiles.Any())
                                {
                                    <div class="new-images-grid">
                                        <div class="images-grid">
                                            @foreach (var file in selectedFiles)
                                            {
                                                <div class="image-item">
                                                    <img src="@GetImagePreviewUrl(file)"
                                                         alt="New image"
                                                         class="preview-image-multiple" />
                                                    <button type="button" class="remove-new-image-btn"
                                                            @onclick="() => RemoveNewImage(file)">
                                                        ×
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(saveMessage))
                {
                    <div class="save-message @(isError ? "error" : "success")">@saveMessage</div>
                }
            }
        </div>

        <div class="modal-footer">
            <button class="btn-cancel" @onclick="CloseModal" disabled="@isSaving">Cancel</button>
            <button class="btn-save" @onclick="SaveUnit" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>Save Unit</span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public Room? Room { get; set; }

    [Parameter]
    public EventCallback<Room> OnUnitSaved { get; set; }

    [Parameter]
    public string ApartmentId { get; set; } = string.Empty;

    private Room CurrentRoom = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private string saveMessage = "";
    private bool isError = false;
    private bool IsEditing => Room?.Id != null;
    private bool isNewRoom => Room == null;


    // Multiple image handling
    private List<IBrowserFile> selectedFiles = new();
    private Dictionary<IBrowserFile, string> imagePreviews = new();

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible)
        {
            await LoadRoomData();
        }
    }

    private async Task LoadRoomData()
    {
        // Add a small delay to ensure parameter is set
        await Task.Delay(1);

        if (Room != null)
        {
            // Editing existing room - create a COMPLETE deep copy to avoid reference issues
            CurrentRoom = new Room
            {
                Id = Room.Id,
                ApartmentId = Room.ApartmentId,
                UnitNumber = Room.UnitNumber,
                RoomType = Room.RoomType,
                RoomPrice = Room.RoomPrice,
                BedCount = Room.BedCount,
                Aircon = Room.Aircon,
                Status = Room.Status,
                Description = Room.Description,
                CreatedAt = Room.CreatedAt,
                // Create completely new image objects to break any references
                Images = Room.Images?.Select(img => new RoomImage
                {
                    ImageData = (byte[])img.ImageData.Clone(),
                    ImageContentType = img.ImageContentType,
                    ImageFileName = img.ImageFileName,
                    UploadedAt = img.UploadedAt
                }).ToList() ?? new List<RoomImage>()
            };
        }
        else
        {
            // Creating new room - initialize with defaults
            CurrentRoom = new Room
            {
                UnitNumber = "",
                RoomType = "Single",
                RoomPrice = 0,
                BedCount = 1,
                Aircon = false,
                Status = "Available",
                Description = "",
                Images = new List<RoomImage>()
            };
        }

        selectedFiles.Clear();
        imagePreviews.Clear();
        saveMessage = "";
        isError = false;

        StateHasChanged();
    }

    private async Task CloseModal()
    {
        // Just close the modal - no database operations needed for cancellation
        await IsVisibleChanged.InvokeAsync(false);
    }

    private async Task HandleMultipleFilesSelected(InputFileChangeEventArgs e)
    {
        foreach (var file in e.GetMultipleFiles())
        {
            if (!selectedFiles.Any(f => f.Name == file.Name))
            {
                selectedFiles.Add(file);

                // Create preview
                var resizedImageFile = await file.RequestImageFileAsync("image/png", 200, 200);
                var buffer = new byte[resizedImageFile.Size];
                await resizedImageFile.OpenReadStream().ReadAsync(buffer);
                var previewUrl = $"data:image/png;base64,{Convert.ToBase64String(buffer)}";
                imagePreviews[file] = previewUrl;
            }
        }
        StateHasChanged();
    }

    private string GetImagePreviewUrl(IBrowserFile file)
    {
        return imagePreviews.ContainsKey(file) ? imagePreviews[file] : "";
    }

    private void RemoveNewImage(IBrowserFile file)
    {
        selectedFiles.Remove(file);
        imagePreviews.Remove(file);
        StateHasChanged();
    }

    private async Task RemoveExistingImage(int index)
    {
        if (index >= 0 && index < CurrentRoom.Images.Count)
        {
            CurrentRoom.Images.RemoveAt(index);

            // Optional: Show a temporary message
            saveMessage = $"Image removed. Click 'Save Unit' to confirm changes.";
            isError = false;

            StateHasChanged();

            // Clear the message after 3 seconds
            await ClearMessageAfterDelay();
        }
    }

    private async Task SaveUnit()
    {
        if (string.IsNullOrWhiteSpace(CurrentRoom.UnitNumber))
        {
            saveMessage = "Unit number is required.";
            isError = true;
            return;
        }

        isSaving = true;
        saveMessage = "";
        isError = false;
        StateHasChanged();

        try
        {
            // Process new image uploads
            var newImages = new List<RoomImage>();
            foreach (var file in selectedFiles)
            {
                try
                {
                    var (imageData, contentType, fileName) = await ImageService.ProcessUploadAsync(file);
                    newImages.Add(new RoomImage
                    {
                        ImageData = imageData,
                        ImageContentType = contentType,
                        ImageFileName = fileName,
                        UploadedAt = DateTime.UtcNow
                    });
                }
                catch (Exception ex)
                {
                    saveMessage = $"Error processing {file.Name}: {ex.Message}";
                    isError = true;
                    isSaving = false;
                    StateHasChanged();
                    return;
                }
            }

            // Combine existing images (which may have been modified by removals) and new images
            // CurrentRoom.Images already reflects any removals from the RemoveExistingImage method
            var allImages = CurrentRoom.Images.Concat(newImages).ToList();
            CurrentRoom.Images = allImages;

            Room savedRoom;

            if (isNewRoom)
            {
                // Create new room in database
                var newRoom = await RoomService.CreateRoomAsync(ApartmentId);

                // Update the new room with the entered data
                newRoom.UnitNumber = CurrentRoom.UnitNumber;
                newRoom.RoomType = CurrentRoom.RoomType;
                newRoom.RoomPrice = CurrentRoom.RoomPrice;
                newRoom.BedCount = CurrentRoom.BedCount;
                newRoom.Aircon = CurrentRoom.Aircon;
                newRoom.Status = CurrentRoom.Status;
                newRoom.Description = CurrentRoom.Description;
                newRoom.Images = CurrentRoom.Images;

                await RoomService.UpdateRoomAsync(newRoom.Id, newRoom);
                savedRoom = newRoom;
                saveMessage = "Unit created successfully!";
            }
            else
            {
                // Update existing room - this will save the modified Images list
                // The Images list already has the removed images excluded
                CurrentRoom.ApartmentId = ApartmentId; // Ensure ApartmentId is set
                await RoomService.UpdateRoomAsync(CurrentRoom.Id, CurrentRoom);
                savedRoom = CurrentRoom;
                saveMessage = "Unit updated successfully!";
            }

            isError = false;

            // Notify parent component
            await OnUnitSaved.InvokeAsync(savedRoom);

            // Close modal after delay
            await Task.Delay(1500);
            await CloseModal();
        }
        catch (Exception ex)
        {
            saveMessage = "Error saving unit. Please try again.";
            isError = true;
            Console.WriteLine($"Error saving unit: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task ClearMessageAfterDelay()
    {
        await Task.Delay(3000);
        saveMessage = "";
        StateHasChanged();
    }
}