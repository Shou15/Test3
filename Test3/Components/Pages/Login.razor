@page "/"
@using Test3.Data.Services
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject UserService UserService

<link href="css/login.css" rel="stylesheet" />

<div class="login-container">
    <h2>Login</h2>

    <div class="form-group">
        <label>Username</label>
        <input @bind="username" placeholder="Enter username" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" @bind="password" placeholder="Enter password" />
    </div>

    <button @onclick="LoginUser">Login</button>

    <div class="signup-link">
        <p>Don't have an account?</p>
        <button class="signup-btn" @onclick="GoToSignup">Sign Up</button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error">@errorMessage</p>
    }
</div>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";

    private async Task LoginUser()
    {
        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Please enter both username and password.";
            return;
        }

        // First check for admin credentials (hardcoded fallback)
        if (username == "admin" && password == "1234")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        try
        {
            // Check against database users
            var user = await UserService.Login(username, password);

            if (user != null)
            {
                // Successful login - navigate to dashboard or user-specific page
                Navigation.NavigateTo("/dashboard");
            }
            else
            { 
                errorMessage = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Login failed. Please try again.";
            // Log the actual exception for debugging
            Console.WriteLine($"Login error: {ex.Message}");
        }
    }

    private void GoToSignup()
    {
        Navigation.NavigateTo("/signup");
    }
}